<?xml version="1.0" encoding="utf-8" ?>

<log4net>
  <appender name="TermAuditLog" type="log4net.Appender.RollingFileAppender">
    <file value="App_Data\Logs\terms\" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline" />
    </layout>
    <staticLogFileName value="false" />
    <datePattern value="yyyyMMdd.lo\g" />
    <rollingStyle value="Date" />
  </appender>

  <appender name="MiniProfilerLog" type="log4net.Appender.RollingFileAppender">
    <file value="App_Data\Logs\profiler\" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline" />
    </layout>
    <staticLogFileName value="false" />
    <datePattern value="yyyyMMdd.lo\g" />
    <rollingStyle value="Date" />
  </appender>

  <appender name="DefaultAppender" type="log4net.Appender.RollingFileAppender">
    <file value="App_Data\Logs\general\" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level %logger - %message%newline" />
    </layout>
    <staticLogFileName value="false" />
    <datePattern value="yyyyMMdd.lo\g" />
    <rollingStyle value="Date" />
  </appender>

  <appender name="trace" type="log4net.Appender.TraceAppender, log4net">
    <layout type="log4net.Layout.PatternLayout, log4net">
      <param name="ConversionPattern" value=" %date %level %message%newline" />
    </layout>
  </appender>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="DefaultAppender" />
    <appender-ref ref="trace" />
  </root>

  <logger name="TermAuditLog" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="TermAuditLog" />
  </logger>

  <logger name="MiniProfiler" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="MiniProfilerLog" />
  </logger>
</log4net>