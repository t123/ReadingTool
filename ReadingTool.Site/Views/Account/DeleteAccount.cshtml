@model ReadingTool.Site.Models.Account.DeleteModel
@{
    ViewBag.Title = "My Account";
}

<div class="row-fluid">
    <div class="span12">
        @Html.FlashMessage(@"Seriously, this will delete your account. All your texts, terms and languages will disappear. Permanently. 
And no it can't be recovered. Make sure you " + Html.ActionLink("export", "ExportAccount") + @" your account data first.", FlashHelper.Level.Alert, false)
        @using(Html.BeginForm("DeleteAccount", "Account", FormMethod.Post, new { @class = "form-horizontal", onsubmit = "return confirm('Are you really sure?')" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <legend>Permanently delete account</legend>
                <div class="control-group">
                    @Html.LabelFor(x => x.Password, new { @class = "control-label" })
                    <div class="controls">
                        @Html.PasswordFor(x => x.Password, new { @placeholder = "your current password" })
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-danger">Permanently delete my account</button>
                    <a href="@Url.Action("Index")" class="btn">Back to your account</a>
                </div>
            </fieldset>
        }
    </div>
</div>
