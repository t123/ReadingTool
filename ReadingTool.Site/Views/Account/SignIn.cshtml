@model ReadingTool.Site.Models.Account.SignInViewModel
@{
    ViewBag.Title = "SignIn";
}

@Html.FlashMessage("If you have an account please sign in below otherwise " + Html.ActionLink("please create an account first", "SignUp") + ".", htmlEncode:false)

@using(Html.BeginForm("SignIn", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Sign In</legend>
        @Html.EditorForModel()
        <div class="buttons">
            <input type="submit" class="btn btn-primary" value="sign in"/>
        </div>
    </fieldset>
}
