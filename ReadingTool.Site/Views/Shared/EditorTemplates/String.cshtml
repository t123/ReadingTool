@using ReadingTool.Core.Formatters
@model object

@if(ViewData.ModelMetadata.ModelType.IsEnum)
{
    Dictionary<string,string> items = new Dictionary<string, string>();
            
    foreach(Enum en in Enum.GetValues(ViewData.ModelMetadata.ModelType))
    {
        items.Add(en.ToString(), en.ToDescription());
    }
    @Html.DropDownList("", new SelectList(items, "Key", "Value", Model), "Please choose")
}
else
{
    @Html.TextBox("", Model)
}