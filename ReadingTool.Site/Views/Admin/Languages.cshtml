@model IEnumerable<ReadingTool.Site.Models.Admin.SystemLanguageIndexModel>
@{
    ViewBag.Title = "Languages";
}

<div class="row-fluid">
    <div class="span12">
        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var language in Model)
                {
                    <tr>
                        <td>@language.Name</td>
                        <td>@language.Code</td>
                        <td>@Html.ActionLink("Edit", "EditLanguage", new { id=language.SystemLanguageId }, new { @class="btn"})</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <a href="@Url.Action("AddLanguage")" class="btn btn-primary">Add a language</a>
    </div>
</div>
