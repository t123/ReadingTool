@model log4net.ILog
           
@{
    ViewBag.Title = "Index";
}

@section submenu { @Html.Partial("_menu") }

<table width="95%" cellpadding="0" cellspacing="0" border="0" class="texts" style="margin-left: 10px">
    <tbody>
        <tr>
            <td>Name</td>
            <td>@Model.Logger.Name</td>
        </tr>
        <tr>
            <td>Repository Configured</td>
            <td>@Model.Logger.Repository.Configured</td>
        </tr>
        <tr>
            <td>Repository Messages</td>
            <td>
                @foreach(var message in Model.Logger.Repository.ConfigurationMessages)
                {
                    @message
                }
            </td>
        </tr>
        <tr>
            <td>Appenders</td>
            <td>
                @foreach(var appender in Model.Logger.Repository.GetAppenders())
                {
                    @appender.Name
                }
            </td>
        </tr>
        <tr>
            <td>Level Debug</td>
            <td>@Model.IsDebugEnabled</td>
        </tr>
        <tr>
            <td>Level Error</td>
            <td>@Model.IsErrorEnabled</td>
        </tr>
        <tr>
            <td>Level Fatal</td>
            <td>@Model.IsFatalEnabled</td>
        </tr>
        <tr>
            <td>Level Info</td>
            <td>@Model.IsInfoEnabled</td>
        </tr>
        <tr>
            <td>Level Warn</td>
            <td>@Model.IsWarnEnabled</td>
        </tr>
    </tbody>
</table>