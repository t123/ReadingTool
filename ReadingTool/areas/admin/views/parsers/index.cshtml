@model IEnumerable<TextParserModel>
           
@{
    ViewBag.Title = "Index";
}

@section submenu { @Html.Partial("_menu") }

<table width="95%" cellpadding="0" cellspacing="0" border="0" class="texts" style="margin-left: 10px">
    <thead>
        <tr>
            <th>Name</th>
            <th>Full Path</th>
            <th>Arguments</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var parser in Model)
        {
            <tr>
                <td>@parser.Name</td>
                <td>@parser.FullPath</td>
                <td>@parser.Arguments</td>
                <td>
                    <a class="sprite sprite-edit" title="edit" href="@(Html.BuildUrlFromExpression<ParsersController>(x => x.Edit(parser.TextParserId.ToString())))">
                        edit
                    </a>
                </td>
                <td>
                    <a class="sprite sprite-delete" title="delete" href="@(Html.BuildUrlFromExpression<ParsersController>(x => x.Delete(parser.TextParserId.ToString())))">
                        delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>