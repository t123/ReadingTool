@using ReadingTool.Entities.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin - @ViewBag.Title - @SystemSettings.Instance.Values.Site.NiceName</title>
    @Html.Partial("_css")
    @RenderSection("styles", false)
    @Html.Partial("_scripts")
    @RenderSection("topJS", false)
</head>
    <body>
        @{
            var user = HttpContext.Current.User.Identity.IsAuthenticated ? (UserIdentity)HttpContext.Current.User.Identity : (UserIdentity)null;
        }
        <div class="nav">
            <ul class="nav">
                @if(user!=null)
                {
                    <li>
                        @(string.IsNullOrEmpty(user.DisplayName) ? user.Name : user.DisplayName)
                    </li>
                }
                <li>@Html.ActionLink("main site", "index", "home", new { area = "" }, new { })</li>
                <li>@(Html.ActionLink<HomeController>(x => x.Index(), "admin home"))</li>
                @if(user!=null)
                {
                    <li>@(Html.ActionLink<LanguagesController>(x => x.Index(), "languages"))</li>
                    <li>@(Html.ActionLink<UsersController>(x => x.Index(1), "users"))</li>
                    <li>@(Html.ActionLink<TasksController>(x => x.Index(), "tasks"))</li>
                    <li>@(Html.ActionLink<ParsersController>(x => x.Index(), "parsers"))</li>
                    <li>@(Html.ActionLink<SystemSettingsController>(x => x.Index(), "settings"))</li>
                    <li>@(Html.ActionLink<EmailsController>(x => x.Index(), "emails"))</li>
                    <li>@(Html.ActionLink<ElmahController>(x => x.Index(), "elmah"))</li>
                    <li>@(Html.ActionLink<LogsController>(x => x.Index(1), "logs"))</li>
                }
            </ul>
        </div>
        @RenderSection("submenu", false)
        @Html.Partial("_flash")
        <div class="clr10"></div>
        @RenderBody()
        <div class="clr50"></div>
        @this.RenderSection("footer",
                          @<div id="footer">
                               &copy; 2012 Released under the <a ref="license" href="http://www.gnu.org/licenses/agpl-3.0.txt" target="_blank">AGPL</a>
                               &nbsp;&nbsp;-&nbsp;&nbsp;Language data from <a href="external" ref="http://www.sil.org/iso639-3/" target="_blank">www.sil.org/iso639-3/</a>
                           </div>)
        @RenderSection("bottomJS", false)
    </body>
    <!-- © 2012 Released under the AGPL (http://www.gnu.org/licenses/agpl.html) -->
</html>
