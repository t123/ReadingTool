@model ReadingTool.Common.Exceptions.TooManyWords
@{
    ViewBag.Title = "Too many words";
}
@section submenu { @Html.Partial("_menu") }
@section footer { }
<div class="clr10"></div>
<p class="notice">
    Sorry, there are too many words in this text to display for reading.
    <br/><br/>
    This is currently limited to provide a better service to all the users. Your text has <strong>@Model.TotalWords</strong> words and the 
    limit is currently <strong>@Model.MaximumAllowedWords</strong> words. 
    
    @if(Model.ItemType==ItemType.Text)
    {
        <text>
        You can @(Html.ActionLink<TextsController>(x=>x.Split(Model.ItemId), "split your text"))
        multiple pieces to avoid this problem or @(Html.ActionLink<TextsController>(x=>x.EditText(Model.ItemId), "edit it and reduce the length of the text")).
        </text>
    }
    else
    {
        <text>
            You can @(Html.ActionLink<TextsController>(x=>x.EditVideo(Model.ItemId), "edit your video subtitles here")).
        </text>
    }
</p>