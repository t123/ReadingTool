@model ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
}
@section submenu {
    @Html.Partial("_menu")
}
<p class="notice">
    If you have forgotten your password, please fill your username in below. Please note that you can only reset your password if 
    you filled in your email address.
</p>
@{
    using (Html.BeginForm<RegistrationController>(x => x.ForgotPassword(), FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <legend>Forgot Password</legend>

        <div class="input_wrapper">
            @Html.LabelHelpFor(x => x.Username)
            @Html.EditorFor(x => x.Username)
            @Html.ValidationMessageFor(x => x.Username)
        </div>

        <button type="submit">
            <span>send password instructions</span>
        </button>
    }
}