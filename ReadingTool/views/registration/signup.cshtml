@model SignUpModel
@{
    ViewBag.Title = "Sign Up";
}
@section submenu {
    @Html.Partial("_menu")
}
@{
    using (Html.BeginForm<RegistrationController>(x => x.SignUp(), FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <legend>Sign Up</legend>

        <div class="input_wrapper">
            @Html.LabelHelpFor(x => x.Username)
            @Html.TextBoxFor(x => x.Username, new { @autocomplete = "off" })
            @Html.ValidationMessageFor(x => x.Username)
        </div>

        <div class="input_wrapper">
            @Html.LabelHelpFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { @autocomplete = "off" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        <div class="input_wrapper">
            @Html.LabelHelpFor(x => x.ConfirmPassword)
            @Html.PasswordFor(x => x.ConfirmPassword, new { @autocomplete = "off" })
            @Html.ValidationMessageFor(x => x.ConfirmPassword)
        </div>
    
        <div class="clr10"></div>
        <p class="general">
            By signing up you agree with the @(Html.ActionLink<HomeController>(x=>x.Legalese(), "general terms and conditions"))
        </p>

        <button type="submit">
            <span>sign up</span>
        </button>
    }
}
<div class="clr20"></div>
<p class="general">
    @(Html.ActionLink<RegistrationController>(x=>x.ForgotPassword(), "Forgotten your password?"))
</p>
