@using MongoDB.Bson
@model MongoDB.Bson.ObjectId
@{
    var nextId = (ObjectId) ViewBag.NextId;
    var previousId = (ObjectId) ViewBag.PreviousId;
    var isParallelText = ViewBag.IsParallelText;
}

@if(Model==ObjectId.Empty)
{
    return;
}

<div style="height:30px">
<ul class="top">
    <li>
        <a title="edit text" href="@(Html.BuildUrlFromExpression<TextsController>(x => x.EditText(Model.ToString())))" class="sprite spritesedit-edit">edit</a>
    </li>
    <li>
        <a title="split text" href="@(Html.BuildUrlFromExpression<TextsController>(x => x.Split(Model.ToString())))" class="sprite spritesedit-split">split</a>
    </li>
    <li>
        <a title="read text" href="@(Html.BuildUrlFromExpression<TextsController>(x => x.Read(Model.ToString())))" class="sprite spritesedit-read">read</a>
    </li>
    @if (isParallelText)
    {
        <li>
            <a title="read text in parallel" href="@(Html.BuildUrlFromExpression<TextsController>(x => x.ReadParallel(Model.ToString())))" class="sprite spritesedit-readparallel">read parallel</a>
        </li>
    }
    @if(previousId!=ObjectId.Empty)
    {
        <li>
            <a title="previous text" href="@(Html.BuildUrlFromExpression<TextsController>(x => x.EditText(previousId.ToString())))" class="sprite spritesedit-prev">previous</a>
        </li>
    }
    @if(nextId!=ObjectId.Empty)
    {
        <li>
            <a title="next text" href="@(Html.BuildUrlFromExpression<TextsController>(x => x.EditText(nextId.ToString())))" class="sprite spritesedit-next">next</a>
        </li>
    }
    <li>
        <a title="pdf" href="@(Html.BuildUrlFromExpression<TextsController>(x => x.PdfText(Model.ToString())))" class="sprite spritesedit-print">print</a>
    </li>
    <li>
        @{
            using (Html.BeginForm<TextsController>(x => x.DeleteText(Model.ToString()), FormMethod.Post, new { style = "display:inline;", onsubmit = "return confirm('Are you sure you want to delete this?')" }))
            {
                @Html.AntiForgeryToken()
                <input title="delete text" type="submit" value="" class="sprite spritesedit-delete" style="padding:0px 0px 0px 0px; margin: 0px 0px 0px 0px; height:23px;width: 24px;border:none;cursor:pointer"/>
            }
        }
    </li>
</ul>
</div>