@model IEnumerable<GroupShareNoticeViewModel>
@{
    Response.ContentType = "application/rss+xml";
    var group = ViewBag.Group as GroupViewModel;
    Layout = "";
}
<?xml version="1.0" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <atom:link href="@(SystemSettings.Instance.Values.Site.Domain)@(Html.BuildUrlFromExpression<GroupsController>(x=>x.Rss(group.GroupId.ToString())))" rel="self" type="application/rss+xml" />
        <title>@group.Name</title>     
        <link>@(SystemSettings.Instance.Values.Site.Domain)@(Html.BuildUrlFromExpression<GroupsController>(x=>x.View(group.GroupId.ToString())))</link>
        <description>Text &amp; Videos shared in @group.Name</description>
        <ttl>60</ttl>
        @if(Model.Any())
        {
            <lastBuildDate>@Model.First().Created.ToString("r")</lastBuildDate>
        }
        @foreach(var item in Model)
        {
            @Html.Partial("partial/rssitem", item)
        }
    </channel>
</rss>