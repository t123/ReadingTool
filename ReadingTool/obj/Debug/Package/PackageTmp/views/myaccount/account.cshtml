@model DeleteAccountModel
@{
    ViewBag.Title = "Account Data";
}
@section submenu {
    @Html.Partial("_menu")
}
@section bottomJS
{
    <script language="javascript" type="text/javascript">
        function confirmDelete() {
            if (!confirm('Are you really sure?'))
                return false;

            return true;
        }
    </script>
}
<p class="warning">
    These operations cannot be reversed.</p>
<p class="notice">
    This will delete all your texts, videos, words and languages, but leave your account.</p>
@{
    using (Html.BeginForm<MyAccountController>(x => x.Delete(), FormMethod.Post, new { onsubmit = "return confirmDelete();" }))
    {
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <legend>Delete all your data</legend>

    <div class="input_wrapper">
        @Html.LabelHelpFor(x => x.Password)
        @Html.PasswordFor(x => x.Password)
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    
    <button type="submit">
        <span>delete</span>
    </button>
    }
}
<div class="clr20">
</div>
<hr />
<div class="clr20">
</div>
<p class="notice">
    This will delete all your texts, videos, words and languages and your account. You
    will be logged off afterwards.</p>
@{
    using (Html.BeginForm<MyAccountController>(x => x.DeleteAccount(), FormMethod.Post, new { onsubmit = "return confirmDelete();" }))
    {
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <legend>Delete all your data and your account</legend>

        <div class="input_wrapper">
            @Html.LabelHelpFor(x => x.Password)
            @Html.PasswordFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)
        </div>
    
    <button type="submit">
        <span>delete</span>
    </button>
    }
}
