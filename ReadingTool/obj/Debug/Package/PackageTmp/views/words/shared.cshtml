@model IEnumerable<WordShareModel>
@{
    ViewBag.Title = "Shared Words";
}
@section submenu { <div class="clr10"></div> }
<table class="texts" cellpadding="0" cellspacing="0" border="0" width="98%" style="margin-left: 10px">
    <thead>
        <tr>
            <th>Word</th>
            <th>Romanisation</th>
            <th>Definition</th>
            <th>Sentence</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var word in Model)
        {
            <tr>
                <td>@word.WordPhrase</td>
                <td>@word.Romanisation</td>
                <td>@word.Definition</td>
                <td>@Html.Raw(word.Sentence)</td>
            </tr>
        }
    </tbody>
</table>
