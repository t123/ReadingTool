@model ReadingTool.Entities.Parser.ParserOutput
<div id="textModal">
    <strong><span style="margin-right: 20px" id="currentWord"></span></strong>
    <ul class="states" style="float:right;">
        <li style="padding-right: 10px;"><a href="#" id="decreaseWord" onclick="return false;">decrease</a></li>
        <li style="padding-right: 10px;"><a href="#" id="increaseWord" onclick="return false;">increase</a></li>
        <li><a id="textModalCloseLink" href="#" onclick="return false;" >close</a></li>
    </ul>
    <div class="clr5"></div>
    <ul class="states">
        <li style="background-color: white;"><input type="radio" name="state" id="knownState" value="@Model.Style.Known"/><span style="padding-right: 10px" >known</span></li>
        <li style="background-color: #F5B8A9;"><input type="radio" name="state" id="unknownState" value="@Model.Style.Unknown"/><span style="padding-right: 10px">unknown</span></li>
        <li style="background-color: #DAE5EB;"><input type="radio" name="state" id="notseenState" value="@Model.Style.NotSeen"/><span style="padding-right: 10px">not seen</span></li>
        <li style="background-color: white;"><input type="radio" name="state" id="ignoredState" value="@Model.Style.Ignored"/>ignore</li>
    </ul>
    <div class="clr5"></div>
    <span class="key">Sentence:</span><input type="text" name="currentSentence" id="currentSentence" /> <a href="#" id="refreshSentence">refresh</a>
    <div class="clr5"></div>
    <div style="float: left; display: inline;">
        <span class="key">Base word:</span><input type="text" name="baseWord" id="baseWord" />
        <div class="clr5"></div>
        @if(Model.Language.HasRomanisationField)
        {
            <span class="key">Romanisation:</span><input type="text" name="romanisation" id="romanisation" />
            <div class="clr5"></div>
        }
        else
        {
            <input type="hidden" name="romanisation" id="romanisation" />
        }
        <span class="key">Definition:</span><textarea name="definition" id="definition"></textarea>
        <div class="clr5"></div>
        <span class="key">Tags:</span><input type="text" name="tags" id="tags" />
    </div>
    <div style="float: right; display: inline;">
        <ul class="dicts">
            @if(!string.IsNullOrEmpty(Model.Language.TranslateUrl))
            {
                <li><a href="#" onclick="return false" id="lnkTrans">translate</a></li>
            }
            <li><a href="#" onclick="return false" id="lnkShare">user defintions</a></li>
            @if(Model.Dictionaries.Count > 0)
            {
                foreach(var dictionary in Model.Dictionaries)
                {
                    <li><a href="#" onclick="openDictionary('@dictionary.WindowName', '@dictionary.Url'); return false;">@dictionary.Name</a></li>
                }
            }
        </ul>
    </div>
    <div class="clr5"></div>
    <button id="btnSave">save</button><strong><span id="saveMessage"></span><span style="float:right; padding-right: 20px" id="wordInfo"></span></strong>
    <div class="clr10"></div>
</div>