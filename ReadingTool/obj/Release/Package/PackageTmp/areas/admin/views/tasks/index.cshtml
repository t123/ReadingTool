@model IEnumerable<SystemTaskModel>
           
@{
    ViewBag.Title = "Index";
}

@section submenu { @Html.Partial("_menu") }

<table width="95%" cellpadding="0" cellspacing="0" border="0" class="texts" style="margin-left: 10px">
    <thead>
        <tr>
            <th>Name</th>
            <th>Is Active?</th>
            <th>Running Now?</th>
            <th>Last Run</th>
            <th>Next Run</th>
            <th>Schedule Type</th>
            <th>Max Failures</th>
            <th>Consecutive Failures</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@Html.Raw(task.IsActive ? "<strong>" + task.Name + "</strong>" : task.Name)</td>
                <td>@(task.IsActive ? "yes" : "no")</td>
                <td>@(task.IsRunning ? "yes" : "no")</td>
                <td>@Html.FormatDateTime(task.LastRunDate)</td>
                <td>@Html.FormatDateTime(task.NextRunDate)</td>
                <td>@task.Schedule</td>
                <td>@task.MaximumFailures</td>
                <td>@task.ConsecutiveFailures</td>
                <td>
                    <a class="sprite sprite-edit" title="edit" href="@(Html.BuildUrlFromExpression<TasksController>(x => x.EditTask(task.SystemTaskId.ToString())))">
                        edit
                    </a>
                </td>
                <td>
                    <a class="sprite sprite-delete" title="delete" href="@(Html.BuildUrlFromExpression<TasksController>(x => x.Delete(task.SystemTaskId.ToString())))">
                        delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>