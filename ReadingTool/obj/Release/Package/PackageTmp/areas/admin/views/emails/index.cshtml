@model IEnumerable<EmailTemplateModel>
           
@{
    ViewBag.Title = "Index";
}

@section submenu { @Html.Partial("_menu") }

<table width="95%" cellpadding="0" cellspacing="0" border="0" class="texts" style="margin-left: 10px">
    <thead>
        <tr>
            <th>Name</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var template in Model)
        {
            <tr>
                <td>@template.Name</td>
                <td>
                    <a class="sprite sprite-edit" title="edit" href="@(Html.BuildUrlFromExpression<EmailsController>(x => x.Edit(template.Name)))">
                        edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr/>
<p class="general">Currently <strong>@ViewBag.Queued</strong> emails in the queue.</p>