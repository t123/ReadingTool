<?xml version="1.0" encoding="utf-8" ?>

<log4net>
  <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="App_Data\Logs\log" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level %logger - %message%newline" />
    </layout>
    <staticLogFileName value="false" />
    <datePattern value=".yyyyMMdd.lo\g" />
    <rollingStyle value="Date" />
  </appender>

  <appender name="NHibernateFileLog" type="log4net.Appender.RollingFileAppender">
    <file value="App_Data\Logs\NHibernate\nh" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level - %message%newline" />
    </layout>
    <staticLogFileName value="false" />
    <datePattern value=".yyyyMMdd.lo\g" />
    <rollingStyle value="Date" />
  </appender>

  <appender name="NHibernateSql" type="log4net.Appender.RollingFileAppender">
    <file value="App_Data\Logs\NHibernate\nhsql" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level - %message%newline" />
    </layout>
    <staticLogFileName value="false" />
    <datePattern value=".yyyyMMdd.lo\g" />
    <rollingStyle value="Date" />
  </appender>

  <appender name="trace" type="log4net.Appender.TraceAppender, log4net">
    <layout type="log4net.Layout.PatternLayout, log4net">
      <param name="ConversionPattern" value=" %date %level %message%newline" />
    </layout>
  </appender>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="LogFileAppender" />
  </root>

  <logger name="NHibernate" additivity="false">
    <level value="ERROR"/>
    <appender-ref ref="trace" />
  </logger>

  <logger name="NHibernate.SQL" additivity="false">
    <level value="ALL" />
    <appender-ref ref="trace" />
  </logger>
</log4net>